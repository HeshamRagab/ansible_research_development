ETCD_NAME="{{ ansible_hostname }}"
ETCD_INITIAL_CLUSTER="{{ etcdCluster }}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="devops-patroni-token"
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ ansible_host }}:2380"
ETCD_DATA_DIR="/var/lib/etcd/patroni"
ETCD_LISTEN_PEER_URLS="https://{{ ansible_host }}:2380"
ETCD_LISTEN_CLIENT_URLS="https://{{ ansible_host }}:2379,https://localhost:2379"
ETCD_ADVERTISE_CLIENT_URLS="{{ etcdPeering }}"

ETCD_TRUSTED_CA_FILE={{ wrk_dir }}/ca.pem
ETCD_CERT_FILE="{{ wrk_dir }}/cert.pem"
ETCD_KEY_FILE="{{ wrk_dir }}/cert-key.pem"
ETCD_PEER_CLIENT_CERT_AUTH=true
ETCD_PEER_TRUSTED_CA_FILE={{ wrk_dir }}/ca.pem
ETCD_PEER_KEY_FILE={{ wrk_dir }}/cert-key.pem
ETCD_PEER_CERT_FILE={{ wrk_dir }}/cert.pem

